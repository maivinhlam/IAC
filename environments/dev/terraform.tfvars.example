# Development Environment Variables
# Copy this file to terraform.tfvars and customize the values

# General Configuration
aws_region   = "us-west-2"
project_name = "iac-demo"
owner        = "dev-team"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]
enable_nat_gateway   = true

# Compute Configuration
use_public_subnets  = true
instance_type       = "t3.micro"
instance_count      = 1
enable_auto_scaling = false

# SSH Key Configuration
# Option 1: Create a new key pair
create_key_pair = false
public_key      = ""  # Your public key content here

# Option 2: Use existing key pair
key_name = ""  # Name of existing EC2 key pair

# Database Configuration
create_database     = false
db_engine          = "mysql"
db_engine_version  = "8.0"
db_instance_class  = "db.t3.micro"
db_allocated_storage = 20
db_name            = "devapp"
db_username        = "admin"
db_password        = "changeme123!"  # Change this in production!
