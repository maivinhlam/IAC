# Development Environment Variables
# Copy this file to terraform.tfvars and customize the values

# General Configuration
aws_region   = "us-west-2"
project_name = "iac-demo"
owner        = "dev-team"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]
enable_nat_gateway   = true

# Compute Configuration
use_public_subnets  = true
instance_type       = "t3.micro"
instance_count      = 1
enable_auto_scaling = false

# SSH Key Configuration
# Option 1: Create a new key pair
create_key_pair = false
public_key      = ""  # Your public key content here

# Option 2: Use existing key pair
key_name = ""  # Name of existing EC2 key pair

# Database Configuration
create_database     = false
db_engine          = "mysql"
db_engine_version  = "8.0"
db_instance_class  = "db.t3.micro"
db_allocated_storage = 20
db_name            = "devapp"
db_username        = "admin"
db_password        = "changeme123!"  # Change this in production!

# Cognito Configuration
create_cognito = true

# Cognito User Pool Settings
cognito_username_attributes      = ["email"]  # Login with email address
cognito_auto_verified_attributes = ["email"]

# Password Policy (relaxed for dev)
cognito_password_minimum_length     = 8
cognito_password_require_lowercase  = true
cognito_password_require_numbers    = true
cognito_password_require_symbols    = false
cognito_password_require_uppercase  = false

# Custom Attributes
# The user_id custom attribute is configured by default in cognito_schemas variable
# You can set additional custom attributes when creating users via:
# - AWS Amplify: Auth.signUp(username, password, { attributes: { 'custom:user_id': 'USER123' } })
# - AWS SDK: adminCreateUser with UserAttributes: [{ Name: 'custom:user_id', Value: 'USER123' }]

# OAuth Settings
cognito_allowed_oauth_flows                  = ["code", "implicit"]
cognito_allowed_oauth_flows_user_pool_client = true
cognito_allowed_oauth_scopes                 = ["email", "openid", "profile"]
cognito_callback_urls                        = ["http://localhost:3000/auth/callback", "http://localhost:8080/auth/callback"]
cognito_logout_urls                          = ["http://localhost:3000", "http://localhost:8080"]

# Domain (optional - set if you want hosted UI)
# cognito_domain = "your-app-dev-auth"  # Must be unique across AWS

# Identity Pool (set to true if you need AWS resource access)
cognito_create_identity_pool              = false
cognito_allow_unauthenticated_identities = false
